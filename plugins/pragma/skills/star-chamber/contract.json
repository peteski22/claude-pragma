{
  "name": "star-chamber",
  "description": "Advisory multi-LLM craftsmanship council for code and architecture review.",
  "version": "1.0",
  "type": "advisory",
  "inputs": {
    "files": {
      "type": "array",
      "items": {"type": "string"},
      "description": "List of files or targets to review",
      "required": false
    },
    "providers": {
      "type": "array",
      "items": {"type": "string"},
      "description": "LLM providers to use (e.g., openai, anthropic, gemini)",
      "required": false
    },
    "debate": {
      "type": "boolean",
      "description": "Enable debate mode: multiple rounds with summarization between rounds, orchestrated by Claude Code (manual only)",
      "required": false,
      "manualOnly": true
    },
    "rounds": {
      "type": "integer",
      "description": "Number of debate rounds (default: 2, requires --debate, manual only)",
      "required": false,
      "manualOnly": true
    }
  },
  "outputs": {
    "markdown": {
      "type": "string",
      "description": "Human-readable report"
    },
    "json": {
      "type": "object",
      "description": "Machine-readable structured output",
      "schema": {
        "files_reviewed": {"type": "array", "items": {"type": "string"}},
        "providers_used": {"type": "array", "items": {"type": "string"}},
        "consensus_issues": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "severity": {"type": "string", "enum": ["high", "medium", "low"]},
              "location": {"type": "string"},
              "category": {"type": "string"},
              "description": {"type": "string"},
              "suggestion": {"type": "string"}
            }
          }
        },
        "majority_issues": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "severity": {"type": "string"},
              "location": {"type": "string"},
              "category": {"type": "string"},
              "description": {"type": "string"},
              "suggestion": {"type": "string"},
              "provider_count": {"type": "integer"}
            }
          }
        },
        "individual_issues": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {"type": "object"}
          }
        },
        "quality_ratings": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "summary": {
          "type": "object",
          "properties": {
            "total_issues": {"type": "integer"},
            "consensus_count": {"type": "integer"},
            "majority_count": {"type": "integer"}
          }
        }
      }
    }
  },
  "manualOnlyFlags": ["debate", "rounds"],
  "defaultProvidersConfigPath": "~/.config/star-chamber/providers.json"
}
